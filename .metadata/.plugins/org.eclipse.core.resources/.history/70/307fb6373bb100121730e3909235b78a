package com.AlyssonAjackson;

/*
 * 01. Preencher um vetor com 100 elementos inteiros fornecidos pelo usuário.
 * 02. Obter e imprimir o número de ocorrências de cada valor no vetor gerado.
 * */

import java.util.Arrays;
import javax.swing.*;
public class Vetor1 {

	public static void main(String args[]){
		int num[] = new int[8];
		int count[] = new int[11];
		int tmp;
		
		for(int n = 0; n < num.length; n++){
			tmp = Integer.parseInt(JOptionPane.showInputDialog("Informe o número para a posição " + n + " do vetor."));
			num[n] = tmp;

			count[tmp]++;
		}
		
		//for(int a : num) System.out.println(a);
		
		System.out.println("--------");
		
		for(int i = 0; i < count.length; i++){
			if(count[i] > 0)
				System.out.println("O número " + i + " se repetiu " + count[i] + " vezes.");
		}		
		
	}
	
}
